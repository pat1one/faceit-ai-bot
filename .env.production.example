# Production environment variables
# Copy to .env.production and fill with real values

# Domain
DOMAIN=your-domain.com

# Database
DB_USER=faceit_prod
DB_PASSWORD=change-this-secure-password
DB_NAME=faceit_prod
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@db:5432/${DB_NAME}

# Redis
REDIS_PASSWORD=change-this-redis-password
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# Security
SECRET_KEY=change-this-to-long-secure-random-string-min-32-chars
JWT_SECRET_KEY=change-this-to-another-secure-random-string

# API Keys (required)
GROQ_API_KEY=your-groq-api-key
FACEIT_API_KEY=your-faceit-api-key

# Flower monitoring
FLOWER_USER=admin
FLOWER_PASSWORD=change-this-flower-password

# Payment providers (optional)
YOOKASSA_SHOP_ID=
YOOKASSA_SECRET_KEY=
SBP_TOKEN=

# Monitoring (optional)
SENTRY_DSN=

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
